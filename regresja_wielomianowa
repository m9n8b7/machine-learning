import numpy as np
import matplotlib.pyplot as plt
import pandas as pd
dataset= pd.read_csv("ceny.csv")

X= dataset.iloc[:,:-1].values
y=dataset.iloc[:, 1].values

"""from sklearn.model_selection import train_test_split
X_train, X_test, y_train, y_test = train_test_split(X,y, test_size=0.2, random_state=0)"""

from sklearn.linear_model import LinearRegression
regressor= LinearRegression()
regressor.fit(X, y)

from sklearn.preprocessing import PolynomialFeatures
poly_reg = PolynomialFeatures(degree = 2)
X_poly = poly_reg.fit_transform(X)
poly_reg.fit(X_poly, y)
reg_2 = LinearRegression()
reg_2.fit(X_poly, y)

plt.scatter(X, y, color = 'red')
plt.plot(X, reg_2.predict(poly_reg.fit_transform(X)), color = 'blue')
plt.title("cena/metry")
plt.xlabel("metry")
plt.ylabel("cena")
plt.show()
#oczywicie to nie jest dobry przyklad bo rozkład nie jest wielominaowy
y_pred=reg_2.predict(poly_reg.fit_transform([[77]]))#przewiduje dla wpisanej liczby metrów
